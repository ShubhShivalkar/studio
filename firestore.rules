rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile and update it.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Allow read/write for test connection documents for any authenticated user.
    match /test_connection/{docId} {
      allow read, write: if request.auth != null;
    }

    // Users can create, read, update, and delete their own journal entries.
    match /journalEntries/{entryId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    // Allow unauthenticated users to create and read waitlist entries. Only authenticated users can manage existing entries.
    match /waitlistEntries/{docId} {
      allow create, read: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Tribes collection: Users can only read tribes they are a member of. All writes are denied from client-side.
    match /tribes/{tribeId} {
      allow read: if request.auth.uid != null && request.auth.uid in resource.data.memberIds;
      allow create, write, delete: if request.auth != null;
    }

    // Archived Tribes collection: Users can only read archived tribes they are a member of. All writes are denied from client-side.
    match /archived_tribes/{archivedTribeId} {
      allow read: if request.auth.uid != null && request.auth.uid in resource.data.memberIds;
      allow write: if request.auth != null;
    }

    // Allow read for all users, and write for authenticated users to all other documents.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
